{
  "manifest_version": 3,
  "name": "LinkedIn Cold Message Generator",
  "version": "1.0",
  "description": "Generate cold messages based on LinkedIn profiles",
  "permissions": [],
  "action": {
    "default_popup": "index.html",
    "default_width": 400,
    "default_height": 600
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}